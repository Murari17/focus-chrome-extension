{
    "manifest_version": 3,
    "name": "Focus Bubble",
    "version": "1.0",
    "description": "Click once to hide distractions: ads, sidebars, comments.",
    "permissions": ["scripting", "activeTab"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "32": "icon32.png"
      }
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"]
      }
    ]
  }
  